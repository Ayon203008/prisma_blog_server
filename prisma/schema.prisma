generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id         String     @id @default(uuid()) // cant use autoIncremaent
  title      String     @db.VarChar(225)
  content    String     @db.Text
  thubnail   String?
  isFeatured Boolean    @default(false)
  status     PostStatus @default(PUBLISHED)
  tags       String[]
  views      Int        @default(0)
  authorId   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Comment {
  id        String        @id @default(uuid())
  content   String        @db.Text
  authorId  String
  postId    String
  parentId  String?
  status    CommentStatus @default(APPROVED)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

enum CommentStatus {
  APPROVED
  REJECT
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHRIVED
}
